		<profile>
			<id>REPLACER</id>
			<!-- Apply repalcer plugin -->
			<build>		
				<plugins>
					<plugin>
					  <groupId>com.google.code.maven-replacer-plugin</groupId>
					  <artifactId>replacer</artifactId>
					  <version>1.5.2</version>
					  <executions>
						<execution>
						  <id>VR_Replacer</id>
						  <phase>compile</phase>
						  <goals>
							<goal>replace</goal>
						  </goals>
						  <configuration>
							<basedir>${project.basedir}/src/main/scripts</basedir>
							<includes>
								<include>**/*.sql</include>
							</includes>
							<replacements>
							  <replacement>
								<token>VR_OWNER</token>
								<value>\${vr_owner_user}</value>
							  </replacement>
							  <replacement>
								<token>VR_READONLY</token>
								<value>\${vr_read_role}</value>
							  </replacement>
							  <replacement>
								<token>VR_UPDATE</token>
								<value>\${vr_update_role}</value>
							  </replacement>
							</replacements>
						  </configuration>
						</execution>
						<execution>
						  <id>MIS_Replacer_VR</id>
						  <phase>compile</phase>
						  <goals>
							<goal>replace</goal>
						  </goals>
						  <configuration>
							<basedir>${project.basedir}/src/main/scripts</basedir>
							<excludes>
								<exclude>VR_OWNER/**/synonym/*.sql</exclude>
							</excludes>
							<includes>
								<include>VR_OWNER/**/*.sql</include>
							</includes>
							<replacements>
							  <replacement>
								<token>MIS_OWNER</token>
								<value>\${mis_owner_user}</value>
							  </replacement>
							  <replacement>
								<token>MIS_READONLY</token>
								<value>\${mis_read_role}</value>
							  </replacement>
							  <replacement>
								<token>MIS_UPDATE</token>
								<value>\${mis_update_role}</value>
							  </replacement>
