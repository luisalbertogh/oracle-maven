		<!-- LIQUIBASE profile -->
		<profile>
			<id>LIQUIBASE</id>
			<!-- Load schema properties -->
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>properties-maven-plugin</artifactId>
						<version>1.0-alpha-2</version>
						<executions>
						   <execution>
							 <phase>initialize</phase>
							 <goals>
							   <goal>read-project-properties</goal>
							 </goals>
							 <configuration>
							   <files>
								 <file>${basedir}/../VR_properties/src/main/config/${username}.properties</file>
							   </files>
							 </configuration>
						   </execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	
		<profile>
			<id>run</id>
			<activation>
				<property>
					<name>env</name>
				</property>
			</activation>
			<properties>
				<outputPath>target/VR_properties/environments/VR_properties-${project.version}</outputPath>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>ice-configuration-resources</id>
								<phase>initialize</phase>
								<goals>
									<goal>unpack</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>com.db.volcker</groupId>
											<artifactId>VR-properties</artifactId>
											<version>${project.version}</version>
											<classifier>${env}</classifier>
											<type>zip</type>
											<overWrite>true</overWrite>
											<outputDirectory>${outputPath}</outputDirectory>
											<excludes>META-INF/**</excludes>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.liquibase</groupId>
						<artifactId>liquibase-maven-plugin</artifactId>
						<version>3.5.1</version>
						<configuration>                  
							<promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
							<propertyFile>target/VR_properties/environments/VR_properties-${project.version}/${username}.properties</propertyFile>
							<propertyFileWillOverride>false</propertyFileWillOverride>
							<goalPrefix>liquibase</goalPrefix>
						</configuration>                
						<dependencies>
							<dependency>
								<groupId>com.db.volcker</groupId>
								<artifactId>VR-properties</artifactId> 	
								<version>${project.version}</version>
								<type>zip</type>
								<classifier>${env}</classifier>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
